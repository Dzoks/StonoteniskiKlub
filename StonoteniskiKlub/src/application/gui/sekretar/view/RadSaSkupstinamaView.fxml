<AnchorPane prefHeight="588.0" prefWidth="730.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.gui.sekretar.controller.RadSaSkupstinamaController">
   <children>
      <TabPane layoutX="8.0" layoutY="4.0" prefHeight="582.0" prefWidth="716.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Pregled skupstina" />
        </tabs>
      </TabPane>
      <Label layoutX="16.0" layoutY="42.0" text="Pregled skupstina">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Separator layoutX="16.0" layoutY="69.0" prefHeight="1.0" prefWidth="698.0" />
      <TableView fx:id="tblSkupstine" layoutX="16.0" layoutY="125.0" onMouseClicked="#setTekst" prefHeight="409.0" prefWidth="250.0">
         <columns>
            <TableColumn fx:id="colDatumOdrzavanja" prefWidth="75.0" text="Datum odrzavanja" />
            <TableColumn fx:id="colImaIzvjestaj" prefWidth="75.0" text="Ima izvjestaj" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <ScrollPane layoutX="286.0" layoutY="125.0" style="-fx-border-color: grey;">
         <content>
            <TextFlow fx:id="taTekst" prefHeight="405.0" prefWidth="424.0" style="-fx-background-color: white;">
               <padding>
                  <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
               </padding></TextFlow>
         </content>
      </ScrollPane>
      <Label layoutX="482.0" layoutY="83.0" text="Tekst:" />
      <RadioButton fx:id="rbDnevniRed" layoutX="528.0" layoutY="83.0" mnemonicParsing="false" onAction="#setTekstDnevnogReda" selected="true" text="Dnevnog reda">
         <toggleGroup>
            <ToggleGroup fx:id="grpTip" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="rbIzvjestaj" layoutX="640.0" layoutY="83.0" mnemonicParsing="false" onAction="#setTekstIzvjestaja" text="Izvjestaja" toggleGroup="$grpTip" />
      <Label layoutX="16.0" layoutY="83.0" text="Prije:" />
      <DatePicker fx:id="dpPrije" layoutX="52.0" layoutY="79.0" prefHeight="25.0" prefWidth="112.0" />
      <Label layoutX="176.0" layoutY="83.0" text="Poslije:" />
      <DatePicker fx:id="dpPoslije" layoutX="217.0" layoutY="79.0" prefHeight="25.0" prefWidth="112.0" />
      <Button fx:id="btnPretrazi" layoutX="336.0" layoutY="79.0" mnemonicParsing="false" onAction="#pretrazi" text="Pretrazite" />
      <Button fx:id="btnDodajIzvjestaj" layoutX="482.0" layoutY="549.0" mnemonicParsing="false" onAction="#dodajIzvjestaj" prefHeight="25.0" prefWidth="112.0" text="Dodajte izvjestaj" />
      <Button fx:id="btnDodajSkupstinu" layoutX="601.0" layoutY="549.0" mnemonicParsing="false" onAction="#dodajSkupstinu" text="Dodajte skupstinu" />
   </children>
